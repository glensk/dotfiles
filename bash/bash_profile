#fi

# User specific environment and startup programs
#echo PATH-
#echo PATH- $PATH
#echo PATH-
#PATH=$PATH:$HOME/.local/bin:$HOME/bin
#export PATH

#echo "in .bash_profile, `hostname | grep -o fidis`"

case "$-" in
  # only for interactive shell login on fidis or daint --> load zsh
  # for interactive shell login on fidis or daint --> load zsh
  # when login to f210 (worknode fidis cluster) or actually any host besides daint / fidis -> do not load zsh
  *i*)
  # THIS LOOP IS ONLY ENTERED FOR INTERACTIVE LOGINS AND NOT OTHERWISE (ssh -C "command")
  # echo hostname `hostname`
  [ "`hostname | grep -o daint`" = "daint" ] && unset FPATH && exec /bin/zsh -l
  [ "`hostname | grep -o fidis`" = "fidis" ] && /bin/zsh -l #exec /bin/bash
   ;;
esac
