Host cluster
    HostbasedAuthentication yes
    EnableSSHKeysign        yes
    HostName cmmd002.mpie.de
    User glensk
    ServerAliveInterval 1600
    ServerAliveCountMax 1000
    ForwardX11Trusted yes
    TCPKeepAlive yes

Host cmpc34
    HostName cmpc34
    User glensk
    ServerAliveInterval 1600
    ServerAliveCountMax 1000
    ForwardX11Trusted yes
    TCPKeepAlive yes

Host cmpc
    HostName $myhost.mpie.de
    User glensk
    ServerAliveInterval 1600
    ServerAliveCountMax 1000
    ForwardX11Trusted yes
    TCPKeepAlive yes

Host garching
    User aglen
    Hostname cmmc001.bc.rzg.mpg.de
    IdentityFile /home/glensk/.ssh/garching

Host garching2
    User aglen
    Hostname cmmc001.bc.rzg.mpg.de
    IdentityFile /Users/glensk/.ssh/garching2

Host gate
    User aglen
    Hostname gate.rzg.mpg.de
    IdentityFile /Users/glensk/.ssh/gate

Host gatefromcmmc
    User aglen
    Hostname gate.rzg.mpg.de
    IdentityFile /cmmc/u/aglen/.ssh/gatefromcmmc

