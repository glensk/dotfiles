#!/bin/sh

datum=`date +"%Y_%m_%d__%H:%M:%S"`
filename=".sendx_$datum"
echo $filename
touch $filename
echo `pwd` > $filename
echo $* >> $filename
[ "$1" = "" ] && echo "ERROR: please specify a directory as first argument!" && exit
#tar --use-compress-program=lbzip2 -cvf archive.tar.bzip2 $filename $*
#tar -cvf archive.tar.bzip2 $filename $*
[ -e "name-of-archive.tar.gz" ] && rm name-of-archive.tar.gz
tar -czvf name-of-archive.tar.gz $filename $*
#scp archive.tar.bzip2 aglen@gate.rzg.mpg.de:~/.exchange/
echo 'scp name-of-archive.tar.gz aglen@gate.rzg.mpg.de:~/.exchange/'
scp name-of-archive.tar.gz aglen@gate.rzg.mpg.de:~/.exchange/
#rm archive.tar.bzip2
[ -e "name-of-archive.tar.gz" ] && echo 'rm name-of-archive.tar.gz' && rm name-of-archive.tar.gz
[ -e "$filename" ] && echo "rm $filename" && rm $filename 


